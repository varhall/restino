{
	"name": "varhall/restino",
	"type": "library",
	"description": "Nette REST API Library",
	"keywords": ["nette", "rest", "api"],
	"homepage": "https://github.com/varhall/restino",
	"license": "MIT",
        "authors": [
		{
			"name": "Ondrej Sibrava",
			"homepage": "https://www.varhall.cz"
		}
	],
	"support": {
		"issues": "https://github.com/varhall/restino"
	},

	"require": {
		"php": ">=8.1",
		"nette/di": ">=v3.1",
		"nette/application": ">=v3.1",
		"nette/http": ">=v3.2",
		"nette/security": ">=v3.1",
		"varhall/utilino": "^v1.2",
		"firebase/php-jwt": "^v6.10"
	},

	"require-dev": {
		"ninjify/nunjuck": "^v0.4",
		"mockery/mockery": "^1.6"
	},

	"autoload": {
		"psr-4": {
			"Varhall\\Restino\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
